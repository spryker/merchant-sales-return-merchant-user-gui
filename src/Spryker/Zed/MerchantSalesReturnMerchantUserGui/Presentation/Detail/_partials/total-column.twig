{% embed '@SalesReturnGui/_partials/column.twig' %}
    {% block title %}
        <div class="row">
            <h5 class="col-sm-12">{{ 'Total' | trans }}</h5>
            <h5 class="col-sm-auto">{{ return.returnItems | length | executeFilterIfExists('formatInt', app.locale) ~ ' ' ~ 'items' | trans }}</h5>
        </div>
    {% endblock %}

    {% block content %}
        {% set currencyIsoCode = (return.returnItems | first).orderItem.currencyIsoCode %}

        <div class="row">
            <div class="col-sm-9 font-bold">
                {{ 'Remuneration Total' | trans ~ ':' }}
            </div>
            <div class="col-sm-3 text-right">
                {{ return.returnTotals.remunerationTotal | money(true, currencyIsoCode) }}
            </div>
        </div>
    {% endblock %}
{% endembed %}
